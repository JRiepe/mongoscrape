
<!-- this is index.handlebars -->
<div class=container>
<h1>Mongo Scraper</h1>
  
<div class="row"> <!-- Left Column -->
  <div class="col-xs-5 col-md-3">
          
            <form method="post" type="text" action="/addComment/{{id}}"  >
            
                <div class="textDivs">
                      
                    <label>
                      <input id="comment" name="comment" type="text" placeholder="add your comment!"/>
                    </label>
                 
                </div>
                
                <div class="buttonDiv">    
                      <button  class="glyphicon glyphicon-plus" type="submit" value="submit
                      "></button>
                </div>
          
            </form>
  </div> <!-- end Left Column -->


  <div class="col-xs-8 col-md-6"> <!-- Middle Column -->
            <div class="textDivs">
              <h3>Article: {{articleNum}}</h3>
              <h4>{{artTitle}}</h4>
              <br>
              <h5>{{artSubtitle}}</h5>
            </div>
                      
            <div class="buttonDiv">   
                <tr>
                    <td>
                        <form method='GET' action="/lastArticle">
                            <button id="leftArrow" class="glyphicon glyphicon-arrow-left"></button>
                        </form>
                    </td>
                    <td>
                        <form method='GET' action="/nextArticle">
                            <button id="rightArrow" class="glyphicon glyphicon-arrow-right"></button>
                        </form>
                    </td>
                  
                </tr>
      
            </div>
                              
  </div><!-- end Middle Column -->


  <div class="col-xs-5 col-md-3 allColumns"> <!-- Right Column -->
    
            <div class="textDivs">
                  <p>{{theComment}}</p>
            </div>    

            <div>
                <form method='POST' action="/delComment/{{id}}">
                      
                      <div class='buttonDiv'>
                                <button type="submit" id="delComment" name="delComment" class="glyphicon glyphicon-minus"></button>
                      </div> <!-- end buttonDiv -->

                </form>
            </div>

  </div> <!-- end Right Column -->

</div> <!-- end container -->

  

<br><br><br>
